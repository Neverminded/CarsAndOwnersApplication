@model MvcApplication5.Models.Owner

@{
    ViewBag.Title = "DetailsOwner";
    Layout = "~/Views/Shared/_mainlayout.cshtml";
}

<h2 class="headertitle">Details concrete owner</h2>
<div class="maindetails">
<fieldset >
    <legend style="width:84%">Owner: @Model.Name_owner @Model.Surname_owner</legend>

     <div class="details-field col-sm-2">

        <p style="display:inline-block">@Html.DisplayNameFor(model => model.Name_owner): </p>
        <div class="label label-info">@Model.Name_owner </div>

    </div>

     <div class="details-field col-sm-2">

        <p style="display:inline-block">@Html.DisplayNameFor(model => model.Surname_owner): </p>
        <div class="label label-info">@Model.Surname_owner </div>

    </div>

    
     <div class="details-field col-sm-2">

        <p style="display:inline-block">@Html.DisplayNameFor(model => model.Birsday_owner): </p>
        <div class="label label-info">@Model.Birsday_owner.ToShortDateString() </div>

    </div>

      <div class="details-field col-sm-2">

        <p style="display:inline-block">@Html.DisplayNameFor(model => model.Driving_experience): </p>
        <div class="label label-info">@Model.Driving_experience </div>
    </div>

</fieldset>

    </div>


<h2 class="headertitle" style="margin-top:50px">
    Cars owner:
</h2>
<table class="table table-hover" id="maintable" style="margin-top:30px">
    <thead style="font-size: 1.3em; color: #0c439b;font-family:'Open Sans', sans-serif">
        <tr>
            <td>Mark</td>
            <td>Model</td>
            <td>Type</td>
            <td>Price</td>
            <td>Year</td>


        </tr>
    </thead>


    <tbody style="color:black">
        @foreach (var item in Model.CarsOwner)
        {
            <tr>
                <td>@item.Mark_car</td>
                <td>@item.Model_car</td>
                <td>@item.Type_car</td>
                <td>@item.Price_car</td>
                <td>@item.Year_of_issue_car</td>
                 </tr>
                       
        }

    </tbody>
</table>

<p style="margin-left:5%;margin-top:30px;">
    @Html.ActionLink("Edit", "EditOwner", "Owner", new { id = Model.Id_owner }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "GetOwners", "Owner", new { @class = "btn btn-warning" })
</p>
